import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc= new Scanner(System.in);
		
		int h;
		System.out.println("Input h" );
		h = sc.nextInt();
		
		for (int i = 1; i <=h; i++) {
			for (int j=1; j<=h+1; j++) {
				if (i+j<=h ) {
					System.out.print(" ");
				} else {
					System.out.print("#");
				}
						}
		System.out.println();
	}
	}
}
