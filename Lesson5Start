public class Main {
	
	public static void main(String[] args) {
		
		double[] b; // более современный
		int size=10;
		b= new double [size];
		
		int [] a= new int [] {10, 0, 7, -3};
		
	//	for (int i = 0; i < a.length; i++) {
	//		a[i]= a[i]+2;
	//	}
		
		for (int i=0; i<a.length; i++) {
		System.out.println(a[i]);
	}
		int sum=0;
		for (int i = 0; i < a.length; i++) {
			sum= sum+a[i];
		}
		
		System.out.println("Average= " +sum/a.length);
		
		
	}
}
